@model dotNet.OpenPOS.Web.Models.InitializeViewModel
@{ 
    ViewData["Title"] = "Initial Startup Configuration";
}

<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#Init">Open Modal</button>

<!-- Modal Init Config -->
<div id="Init" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
               <!--  <button type="button" class="close" data-dismiss="modal">&times;</button>-->
                <h4 class="modal-title">@ViewData["Title"]</h4>
            </div>
            <div class="modal-body">
                <section ng-init="tab = 1">
                    <ul class="nav nav-pills">
                        <li><a href ng-click="tab = 1">1</a></li>
                        <li><a href ng-click="tab = 2">2</a></li>
                        <li><a href ng-click="tab = 3">3</a></li>
                        <li><a href ng-click="tab = 4">4</a></li>
                        <li><a href ng-click="tab = 5">5</a></li>
                    </ul>
                </section>
                <div class="step-one" ng-show="tab == 1">
                    <h2>Set Database Configuration</h2>
                </div>
                <div class="step-two" ng-show="tab == 2">
                    <h2>Set Account Configuration</h2>
                </div>
                <div class="step-three" ng-show="tab == 3">
                    <h2>Set Step 3</h2>
                </div>
                <div class="step-four" ng-show="tab == 4">
                    <h2>Set Step 4</h2>
                </div>
                <div class="step-five" ng-show="tab == 5">
                    <h2>You did it! It's ready to start :)</h2>
                </div>
            </div>
            <div class="modal-footer" ng-click="tab = tab + 1">
                <a href>Next Step</a>
            </div>
        </div>

    </div>
</div>


